-#  This file is app/views/movies/search_tmdb.html.haml
%h1 The following movies containing #{@query} were found on TMDb

%table#movies
  %thead
    %tr
      %th Title
      %th Rating
      %th Release Date
      %th Select
  %tbody
    - @movies.each do |movie|
      %tr
        %td= movie[:title] 
        %td= movie[:rating]
        %td= movie[:release_date]
        %td= check_box_tag "tmdb_movies[#{movie[:tmdb_id]}]"
= form_tag('/movies/search_tmdb', add_tmdb: 'post') do
  = submit_tag("Add Selected Movies")
= link_to 'Return to movie list', movies_path